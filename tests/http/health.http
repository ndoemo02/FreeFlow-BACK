### Health Check - Expect 200
GET http://localhost:3002/api/health
Accept: application/json

> {%
client.test("Health check returns 200", function() {
    client.assert(response.status === 200, "Expected status 200, got " + response.status);
});

client.test("Health check returns valid JSON", function() {
    client.assert(response.contentType.mimeType === "application/json", "Expected JSON response");
});

client.test("Health check has required fields", function() {
    const data = response.body;
    client.assert(data.status === "ok", "Expected status 'ok', got " + data.status);
    client.assert(data.service === "freeflow-backend", "Expected service 'freeflow-backend'");
    client.assert(data.ts, "Expected timestamp field");
});

client.test("Health check response time is acceptable", function() {
    client.assert(response.responseTime < 1000, "Response time should be under 1 second");
});
%}
